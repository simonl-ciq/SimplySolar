<resources>
	<properties>
		<property id="DisplayType" type="number"><!-- 0 means display Azimuth 1 means Shadow Bearing -->0</property>
	</properties>
	<settings>
		<setting propertyKey="@Properties.DisplayType" title="@Strings.DisplayTypeTitle">
			<settingConfig type="list">
				<listEntry value="0">@Strings.showAzimuth</listEntry>
				<listEntry value="1">@Strings.showBearing</listEntry>
			</settingConfig>
		</setting>
	</settings>
	<strings>
		<string id="DisplayTypeTitle">Which angle is to be shown?</string>
		<string id="showAzimuth">Solar azimuth</string>
		<string id="showBearing">Shadow bearing</string>
	</strings>
</resources>